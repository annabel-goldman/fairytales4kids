---
import BaseLayout from './BaseLayout.astro';
import '../styles/styles.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Fairytales 4 Kids - Magical Stories for Children",
  description = "Discover a magical collection of classic fairytales and children's stories. Perfect for bedtime reading, featuring beloved characters like Cinderella, Snow White, and more."
} = Astro.props;
---

<BaseLayout 
  title={title}
  description={description}
  keywords="fairytales, children's stories, bedtime stories, kids stories, classic fairytales, Cinderella, Snow White, Little Red Riding Hood, Three Little Pigs, Hansel and Gretel"
>
  <header>
    <h1>Welcome to Fairytales 4 Kids!</h1>
    <p class="subtitle">Discover magical stories and adventures for young readers</p>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer class="site-footer">
    <div class="footer-content">
      <div class="about-section">
        <h2>About the Creator</h2>
        <div class="creator-info">
          <div class="creator-details">
            <h3>Annabel Marie Goldman</h3>
            <p class="creator-title">Full-Stack Software Engineer | M.S. Computer Science, Northwestern University</p>
            <p class="creator-bio">I created Fairytales 4 Kids as a passion project. I love fairytales and I love to code. I hope you enjoy these stories as much as I enjoyed creating this website.</p>
            <div class="creator-links">
              <a href="https://annabelgoldman.com" target="_blank">Website</a> |
              <a href="https://github.com/annabelgoldman" target="_blank">GitHub</a> |
              <a href="https://www.linkedin.com/in/annabel-goldman-43bba723a" target="_blank">LinkedIn</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>
</BaseLayout>
